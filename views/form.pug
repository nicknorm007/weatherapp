extends layout

block content
  .jumbotron.jumbotron-fluid
    h1.display-4 Simply Weather
    p.lead
      | Get easy to read weather and alerts!
    hr.my-4
    p
      | Choose from some favorite places or enter your own custom place:
    #cityGroupings
      a#btnTewksburyWeather.btn.btn-sm.btnWeather.raised(
        href='/weather?forecastUrl=none&city=Tewksbury' 
        role='button' style=`background-color:` + `${citymap.Tewksbury.color}`)=citymap.Tewksbury.name
      a#btnBostonWeather.btn.btn-sm.btnWeather.raised(
        href='/weather?forecastUrl=none&city=Boston' 
        role='button' style=`background-color:` + `${citymap.Boston.color}`)=citymap.Boston.name
      a#btnOrlandoWeather.btn.btn-sm.btnWeather.raised(
        href='/weather?forecastUrl=none&city=Orlando' 
        role='button' style=`background-color:` + `${citymap.Orlando.color}`)=citymap.Orlando.name
      a#btnMiamiWeather.btn.btn-sm.btnWeather.raised(
        href='/weather?forecastUrl=none&city=Miami' 
        role='button' style=`background-color:` + `${citymap.Miami.color}`)=citymap.Miami.name
