extends layout

block content
  a#btnGoHome.btn.btn-primary.btn-sm(href='/' role='button') Back Home
  h1=`${city} Weather`
  hr
  a#btnGetAlerts.btn.btn-danger.btn-sm(href='/alerts' role='button') Get Area Alerts
  if forecasts.length
    table.listing-table.table-striped
      tr
        th Name
        th Forecast
        th Temperature
        th Wind Speed
        th Wind Direction
      each forecast in forecasts
        tr
          td(style=`background-color:` + `${forecast.nameColor}`)= forecast.name
          td= forecast.detailedForecast
          td(style=`background-color:` + `${forecast.tempColor}`)= forecast.temperature
          td= forecast.windSpeed
          td= forecast.windDirection
  else
    p No forecasts